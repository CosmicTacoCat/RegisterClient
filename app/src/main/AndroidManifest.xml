<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.uark.uarkregisterapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name=".CheckoutActivity"
            android:label="@string/title_activity_checkout"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name=".TransactionActivity"
            android:label="@string/title_activity_transaction_"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity android:name=".CreateEmployeeActivity"> </activity>

        <activity
            android:name=".MainMenuActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity android:name=".LandingActivity" />

        <activity
            android:name=".ProductsListingActivity"
            android:label="@string/title_activity_products_listing"
            android:parentActivityName=".LandingActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.uark.uarkregisterapp.LandingActivity">

            </meta-data>
        </activity>

        <activity
            android:name=".ProductViewActivity"
            android:label="@string/title_activity_product_view"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>